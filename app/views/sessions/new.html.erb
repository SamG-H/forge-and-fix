<div class="container has-text-centered">
  <% if @error %>
   <div class="has-text-danger">
    <p><%= @error %></p>
   </div>
  <% end %>
<%= form_tag('/signin', method: :post) do %>

  <div class="form-group">
    <%= label_tag(:username, "Your name:") %>
    <%= text_field_tag(:username, nil, class: "form-control") %>
  </div>

  <div class="form-group">
    <%= label_tag(:password, "Your password:") %>
    <%= password_field_tag(:password, nil, class: "form-control") %>
  </div>

  <div class="actions">
    <%= submit_tag("Sign In", class: "button is-link") %>
  </div>

<% end %> 
</div>
