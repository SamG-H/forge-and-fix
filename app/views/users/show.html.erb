<% if @user.projects.none? %>
  <h1 class="is-size-1">Let's build something great together <%= @user.username %>!</h1>
<% else %>
  <h1 class="is-size-1"><%= @user.username %>'s Projects!</h1>
  <% @user.projects.each do |p| %>
    <%= link_to "#{p.title}: #{p.category}", p, class: "is-size-3" %><br>
  <% end %>
<% end %>
<%= link_to "Create New Project", new_project_path, class:"button is-success" %>

