<h1 class="is-size-1">Projects</h1>
<h2 class="is-size-3">Search Projects By Category</h2>
<%= form_tag(projects_path, method: :get) do %>
<%= text_field_tag(:search, params[:search]) %>
<%= submit_tag ("Search") %>
<% end %>

<div>
  <% @projects.each do |p| %>
  <%= link_to "#{p.title}: #{p.description}", p, class: "is-size-3" %><br>
  <% end %>
</div>
<%= link_to "Create New Project", new_project_path, class:"button is-success" %>


