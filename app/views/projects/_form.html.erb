<div class="container has-text-centered">
  <%= form_with(model: @project, local: true) do |f| %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :category %>
    <%= f.text_field :category %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  
  <%= f.submit class: "button is-link"%>
  <% end %>
</div>

