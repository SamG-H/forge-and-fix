<%= form_with(model: @comment, url: create_comment_path, local: true) do |f| %>
  <%= render 'shared/errors', instance: @comment %>

  <div class="field">
    <%= f.label :body, class: "label" %>
    <%= f.text_field :body, class: "input" %>
  </div>

  <%= f.submit class: "button is-link" %>
<% end %>